<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="queryTheCursor"
        android:onClick="queryTheCursor"/>
    <Button
        android:text="下载资源"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="urlConnect"
        />
    <Button
        android:text="去登陆"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goGetPost"
        />
    <Button
        android:text="去发消息"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goSendMessenger"
        />
    <Button
        android:text="去首页viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="viewPager"
        />
    <Button
        android:text="显示对话框"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showDialog"
        />
    <Button
        android:text="抽屉菜单栏"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="drawerLayout"
        />
    <tydic.cn.com.CountView
        android:id="@+id/cv_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_badge"
            android:layout_width="50dp"
            android:layout_height="50dp"
        android:scaleType="fitXY"
            android:src="@drawable/image1" />
    <ListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>